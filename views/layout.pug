doctype html
html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title glorified spreadsheet
        link(rel='stylesheet', href='/static/style.css')
    body
        h1
            block heading
        - let links = [['home', '/']];
        block breadcrumbs
            div.breadcrumbs
                - for(let i = 0; i < links.length; ++i)
                    a(href=links[i][1])= links[i][0]
                    - if(i !== links.length-1)
                        | &nbsp;/&nbsp;
        block content
